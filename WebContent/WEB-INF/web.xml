<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>Controller</servlet-name>
		<servlet-class>ua.kiral.project4.controller.Controller</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Controller</servlet-name>
		<url-pattern>/controller</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>RequestPathFilter</filter-name>
		<filter-class>ua.kiral.project4.controller.filter.RequestPathFilter</filter-class>
		<init-param>
		<param-name>propertiesPath</param-name>
		<param-value>resources/filter/path</param-value>
	</init-param>
	</filter>
	<filter>
	<filter-name>EncodingFilter</filter-name>
	<filter-class>ua.kiral.project4.controller.filter.EncodingFilter</filter-class>
</filter>

	<filter-mapping>
		<filter-name>RequestPathFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>EncodingFilter</filter-name>
		<url-pattern>/controller</url-pattern>
	</filter-mapping>

	<resource-ref>
		<description>Connections Pool</description>
		<res-ref-name>jdbc/project4DB</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>

	<session-config>
		<session-timeout>100</session-timeout>
	</session-config>

	<error-page>
		<error-code>404</error-code>
		<location>/error.jsp</location>
	</error-page>
	<error-page>
		<error-code>405</error-code>
		<location>/error.jsp</location>
	</error-page>

</web-app>